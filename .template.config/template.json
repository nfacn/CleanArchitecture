{
  "$schema": "http://json.schemastore.org/template",
  "author": "nfacn",
  "classifications": [
    "WebApi",
    "SPA",
    "ASP.NET",
    "Clean Architecture"],
  "name": "Clean Architecture Solution",
  "description": "Simplified Clean Architecture Solution Template for creating ASP.NET Core WebApi.",
  "identity": "Clean.Architecture.Solution.CSharp",
  "groupIdentity": "Clean.Architecture.Solution",
  "shortName": "ca-sln",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CleanArchitecture",
  "preferNameDirectory": true,
  "symbols": {
    "ClientFramework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "None",
          "description": "Web API only"
        }
      ],
      "defaultValue": "None",
      "description": "Web API only"
    },
    "UseApiOnly": {
      "type": "computed",
      "value": "(ClientFramework == \"None\")"
    },
    "UseLocalDB": {
      "type": "computed",
      "value": "(!UseSQLite)"
    },
    "caRepositoryUrl": {
      "type": "generated",
      "generator": "constant",
      "replaces": "caRepositoryUrl",
      "parameters": {
        "value": "https://github.com/nfacn/CleanArchitecture"
      }
    },
    "caPackageVersion": {
      "type": "generated",
      "generator": "constant",
      "replaces": "caPackageVersion",
      "parameters": {
        "value": "8.0.3"
      }
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec"
      ],
      "rename": {
        "README-template.md": "README.md"
      }
    }
  ]
}
